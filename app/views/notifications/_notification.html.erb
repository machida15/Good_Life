<% visiter = notification.visiter %>
<% tweet = notification.tweet %>

<div class="columns is-mobile is-centered">
  <div class="column is-half">
    <table class="table">
      <tr>
        <th><%= link_to user_path(notification.visiter_id) do %>
          <div class="image is-64x64"><%= attachment_image_tag visiter, :profile_image, :fill,60,60, format: "jpeg", fallback: "no_image.jpg",class: "is-rounded" %></div>
          <% end %>
        </th>
        <th>
          <%= notification_form(notification) %><%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
          <% if !@comment.nil? %>
            <%= @comment %>
          <% end %>
          </th>
      </tr>
    </table>
  </div>
</div>
