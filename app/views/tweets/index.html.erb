<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        つぶやき一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
    <% @tweets.each do |tweet| %>
      <div class="column is-4">
          <div class="card">
          <p class="image is-64x64"><%= attachment_image_tag tweet.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",class: "is-rounded" %></p>
          <p><%= link_to tweet.user.name, user_path(tweet.user.id) %></p>
          <%= link_to tweet_path(tweet.id) do %>
            <p><%= tweet.body %></p>
          <% end %>
          <div class="card-image">
              <figure class="image is-2by1">
                <%= link_to tweet_path(tweet) do %>
              <%= attachment_image_tag tweet, :image,fallback: "no_image.jpg" %>
              <% end %>
            </figure>
          </div>

           <% if tweet.favorited_by?(current_user) %>
                <p>
                <%= link_to tweet_favorites_path(tweet), method: :delete, remote: true do %>
                ♥<%= tweet.favorites.count %> いいね
                <% end %>
                </p>
                <% else %>
                <p>
                <%= link_to tweet_favorites_path(tweet), method: :post, remote: true do %>
                ♡<%= tweet.favorites.count %> いいね
                <% end %>
                </p>
                 <% end %>

         <p><%= link_to "#{tweet.tweet_comments.count} コメント", tweet_path(tweet.id) %></p>
          <%= render "relationships/follow_button", user: tweet.user %>
        </div>
      </div>
    <% end %>
    <!--フォロー機能-->
    <%= paginate @tweets %>
    </div>
   </div>
 </section>