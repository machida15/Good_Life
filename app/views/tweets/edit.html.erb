<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        つぶやき編集
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @tweet do |f| %>
          <div class="field">
            <%= f.label :body, "内容", class: "label" %>
            <%= f.text_field :body, class: "input" %>
          </div>
            <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>