<section class="hero is-primary is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        マイページ
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="columns is-centered">
          <div class="column is-4">
            <figure class="image is-128x128"  style="margin-left: auto; margin-right: auto;">
      <p class= "image"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "is-rounded" %></p>
        </figure>
        </div>
        <div class="column is-8">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                   <strong><%= @user.name %></strong>
                </td>
                 <td>
                  フォロワー数
                  フォロー数
                </td>
                <td>
                    <% if @user.id == current_user.id %>
                    <div class="button is-primary"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
                    <% end %>
                </td>
                 </tr>
                  </table>
                   <table class="table is-fullwidth">
              <tr>
                <td>
                  <%= @user.introduction %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">

<% @tweets.each do |tweet| %>
<div class="column is-4">
          <div class="card">
  <!--<figure class="image is-2by1">-->
    <%= attachment_image_tag tweet, :image %>
  <!--</figure>-->
  <p><%= attachment_image_tag tweet.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
   <p>ユーザーネーム：<%= tweet.user.name %></p>
  <%= link_to tweet_path(tweet.id) do %>
  <p><%= tweet.body %></p>
  <% end %>
</div>
</div>
<% end %>

<%= paginate @tweets %>
 </div>
</div>